<%= form_with url: login_path, scope: :user do |form| %>
  <%= render partial: "shared/flash_errors", locals: { object: flash } %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>
  <div>
    <%= form.label :remember_me %>
    <%= form.check_box :remember_me %>
  </div>
  <%= form.submit "Sign In" %>

  <br>
  <%= link_to '<button type="button">Sign Up</button>'.html_safe, sign_up_path %>
<% end %>